<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nutsdev.alltest.ui.fragments.VectorCompatFragment">

    <TextView
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/selector_ic_menu_android"
        android:drawableStart="@drawable/selector_ic_menu_android"
        android:drawableRight="@drawable/selector_ic_menu_camera"
        android:drawableEnd="@drawable/selector_ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <!-- hardcoding this values here for VectorDrawable will look ugly on API 21+ devices!!! -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/selector_ic_menu_android" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_android_200dp" />

</LinearLayout>
